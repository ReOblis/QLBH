@{
    ViewData["Title"] = "Liên hệ";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <section class="mt-4">
        <div class="d-flex justify-content-center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m13!1m8!1m3!1d979.9363872522016!2d106.6835833!3d10.7540833!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMTDCsDQ1JzE0LjciTiAxMDbCsDQxJzAwLjkiRQ!5e0!3m2!1svi!2s!4v1701140174681!5m2!1svi!2s" width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
        </div>
    </section>
    <section class="row mt-5">
        <header class="col-12">
            <h2 class="mb-3">Liên hệ chúng tôi</h2>
        </header>
        <div class="col-lg-8 mb-5">
            <form asp-action="SendMessage" id="contact-form">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" name="subject" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Chủ đề'" placeholder="Chủ đề" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <textarea class="form-control w-100" name="message" cols="30" rows="9" onfocus="this.placeholder=''" onblur="this.placeholder='Nhập tin nhắn'" placeholder="Nhập tin nhắn." style="resize:none"></textarea>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input class="form-control" name="name" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Nhập tên'" placeholder="Nhập tên" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input class="form-control" name="email" type="text" onfocus="this.placeholder=''" onblur="this.placeholder='Nhập địa chỉ email'" placeholder="Nhập địa chỉ email" />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group mt-2">
                            <button class="btn btn-outline-dark w-100">Gửi</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-4">
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-home"></i>
                </span>
                <div class="media-body">
                    <h4>Địa chỉ</h4>
                    <p>273 An Dương Vương - Phường 3 - Quận 5 - TPHCM</p>
                </div>
            </div>
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-phone"></i>
                </span>
                <div class="media-body">
                    <h4>Giờ làm việc</h4>
                    <p>8:00AM - 16:00PM</p>
                </div>
            </div>
            <div class="media">
                <span class="h4 mr-3">
                    <i class="fas fa-at"></i>
                </span>
                <div class="media-body">
                    <h4>NVK@gmail.com</h4>
                    <p>Chúng tôi đang chờ tin nhắn của bạn</p>
                </div>
            </div>
        </div>
    </section>
</div>